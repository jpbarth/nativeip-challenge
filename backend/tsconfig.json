{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
}